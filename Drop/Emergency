#include <Servo.h>

// NASA input pin
int NASA_DROP_PIN = 8;
// DC motor driver
//int motorDriverDir = XX;
//int motorDriverPwm = 15;
//int motorDriverSlp = 14;
//int motorDriverCs = 41;
// Volatile vars
volatile bool interrFlag = false;
volatile int interrStart = 0;

Servo servoPWMs;

void setup() {
  // Serial.begin(115600);
  // Serial.println("Begin drop test");

  // Setup pins
  pinMode(LED_BUILTIN, OUTPUT); // Configure Teensy LED
  pinMode(NASA_DROP_PIN, INPUT_PULLUP); // Receiving drop signal
  // pinMode(motorDriverDir, OUTPUT); digitalWrite(motorDriverDir, LOW); // Motor driver direction
  // pinMode(motorDriverPwm, OUTPUT); analogWrite(motorDriverPwm, 0); // Motor driver PWM
  // pinMode(motorDriverSlp, OUTPUT); digitalWrite(motorDriverSlp, LOW)// Motor driver Sleep
  // Servos
  servoPWMs.attach(5);

  // Start interrupt
  attachInterrupt(digitalPinToInterrupt(NASA_DROP_PIN), record, LOW);
}

void loop() {
  if (interrFlag && (millis()-interrStart)>8) { // Interrupted & lasts > 8ms
    digitalWrite(LED_BUILTIN, HIGH);
    // Lower the DC motor
    // digitalWrite(motorDriverSlp, HIGH); // Remove motor driver from sleep mode
    // analogWrite(dcMotorPin, 255*0.5); // 50% duty cycle
    // delay(2000);
    while (true) { // Pulse servos and end code
      servoPWMs.writeMicroseconds(1900); // pulse servos
      delay(20);
    }
  }
  else{ // Not interrupted
    interrFlag = false;
    interrStart = millis();

    // digitalWrite(motorDriverPwm, HIGH);
    // digitalWrite(motorDriverSlp, HIGH);

    digitalWrite(LED_BUILTIN, LOW);
  }
  delay(200);
  digitalWrite(LED_BUILTIN, HIGH);
  delay(200);

}

void record() {
  interrFlag = true;
  interrStart = millis();
}

